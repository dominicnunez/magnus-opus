    "url": ""
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.1.25",
    "@opencode-ai/sdk": "^1.1.25",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "bun-types": "^1.3.6",
    "@types/node": "^25.0.9",
    "typescript": "^5.9.3"
